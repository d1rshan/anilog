{
  "name": "anilog",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.7"
    }
  },
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @anilog/db db:push",
    "db:studio": "turbo -F @anilog/db db:studio",
    "db:generate": "turbo -F @anilog/db db:generate",
    "db:migrate": "turbo -F @anilog/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": ""
  },
  "packageManager": "bun@1.2.23"
}
