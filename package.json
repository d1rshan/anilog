{
  "name": "anilog",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.7"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "bunx turbo run quality check-types build",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --check .",
    "format:fix": "oxfmt .",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @anilog/db db:push",
    "db:studio": "turbo -F @anilog/db db:studio",
    "db:generate": "turbo -F @anilog/db db:generate",
    "db:migrate": "turbo -F @anilog/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": [
      "oxfmt",
      "oxlint --fix"
    ]
  },
  "packageManager": "bun@1.2.23"
}
